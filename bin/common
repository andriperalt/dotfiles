#!/usr/bin/env bash

color_white='\033[1;37m'
color_green='\033[1;32m'
color_red='\033[1;33m'
color_end='\033[0m'

XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"

DOTFILES=(XCompose Xdefaults)

# Verifying available commands / programs
if command -v zsh > /dev/null
then
  DOTFILES+=(zsh zshrc)
fi

XDG_DOTFILES=(asdf fonts fzf)

if command -v nvim > /dev/null
then
  XDG_DOTFILES+=(nvim)
fi
if command -v sway > /dev/null
then
  XDG_DOTFILES+=(sway)
fi

if command -v swaylock > /dev/null
then
  XDG_DOTFILES+=(swaylock)
fi

if command -v mako > /dev/null
then
  XDG_DOTFILES+=(mako)
fi

if command -v waybar > /dev/null
then
  XDG_DOTFILES+=(waybar)
fi

if command -v rofi > /dev/null
then
  XDG_DOTFILES+=(rofi)
fi

if command -v kitty > /dev/null
then
  XDG_DOTFILES+=(kitty)
fi

if command -v termite > /dev/null
then
  XDG_DOTFILES+=(termite)
fi
